<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fonoteca.Pages.SubscriptionTitlesPage"
             Title="SubscriptionsLevelsPage"
             xmlns:viewmodel="clr-namespace:fonoteca.ViewModels"
             xmlns:api="clr-namespace:fonoteca.Models.Api"
             xmlns:Helpers="clr-namespace:fonoteca.Helpers"
             x:DataType="viewmodel:SubscriptionTitlesPageViewModel"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Margin="20, 10, 20, 0"
            AutomationProperties.IsInAccessibleTree="true"
            SemanticProperties.HeadingLevel="Level1"
            SemanticProperties.Description=""
            Text="Volver a inicio"
            x:Name="Volver"
            FontSize="Medium"
            BackgroundColor="SlateGray"
            TextColor="White"
            Command="{Binding GoToBackCommand}"
            FontAttributes="Bold"></Button>

        <ListView
            Margin="0, 00, 20, 0"
            Grid.Row="2"
            AutomationProperties.IsInAccessibleTree="true"
            SemanticProperties.HeadingLevel="Level1"
            SemanticProperties.Description="Seleccione un elemento de la lista para ver los mensajes de la subscripciÃ³n"
            x:Name="SubscriptionTitlesView"
            ItemsSource="{Binding Items}"
            ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="api:SubscriptionTitle">
                    <ViewCell>
                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                            <StackLayout Padding="20,5" VerticalOptions="StartAndExpand" Orientation="Vertical">
                                <Grid RowDefinitions="40">
                                    <Label 
                                        Text="{Binding Title}" 
                                        Margin="0,0,5,0" 
                                        HorizontalOptions="Start" 
                                        FontSize="Medium" 
                                        AutomationProperties.IsInAccessibleTree="true"
                                        SemanticProperties.HeadingLevel="Level1"
                                        SemanticProperties.Description="{Binding Title}"
                                        LineBreakMode="TailTruncation"
                                        VerticalTextAlignment="Center" 
                                        HorizontalTextAlignment="Start" 
                                        Grid.Row="0" Grid.Column="0" />
                                </Grid>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>